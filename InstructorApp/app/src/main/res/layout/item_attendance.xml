<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/gray_background"
    android:id="@+id/ll_topViewItemAttendance">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_rollNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RN: 2015001"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:typeface="monospace"/>

        <TextView
            android:id="@+id/tv_studentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abdullah Ansari"
            android:textSize="18sp"
            android:textColor="@color/gray_subtitle"
            android:typeface="monospace"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_present_attendance"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Present"
        android:gravity="right"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"
        android:textColor="@color/text_white_dull"
        android:typeface="monospace"/>
</LinearLayout>